<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/primary_color" />
            <corners android:radius="16.0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#CCCCCC" android:endColor="#FFFFFF" android:angle="270"/>
            <stroke android:width="1.0dip" android:color="#ff313131" />
            <corners android:radius="16.0dp" />
        </shape>
    </item>
</selector>